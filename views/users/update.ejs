                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Create User</h4>
                                <% if (success) { %>
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        Bạn Đã Update Thành Công!
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                <% } %>
                                <form action="/admin/users/update/<%= user._id %>" method="POST">
                                    <div class="form-group w-50">
                                        <label>Họ Và Tên:</label>
                                        <input type="text" class="form-control" name="fullname" value="<%= user.fullname %>" />
                                    </div>
                                    <div class="form-group w-50">
                                        <label>Email:</label>
                                        <input type="text" class="form-control" name="email" value="<%= user.email %>">
                                    </div>
                                    <div class="form-group w-50">
                                        <label>Password:</label>
                                        <input type="password" class="form-control" name="password" value="<%= user.password %>">
                                    </div>
                                    <div class="form-group w-50">
                                        <label>Số Điện Thoại: </label>
                                        <input type="text" class="form-control" name="phone" value="<%= user.phone %>">
                                    </div>
                                    <div class="form-group">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="status" value="true" checked/>
                                            <label class="form-check-label" for="inlineRadio1">ADMIN</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="status" value="false"/>
                                            <label class="form-check-label" for="inlineRadio2">USER</label>
                                        </div>
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Update User">
                                </form>
                            </div>
